{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "target":"es6", 
    "allowJs": true,
    "outDir": "sdist",
    "sourceMap":true,
    "noImplicitAny":false,
    "jsx":"react"
  },
  "exclude": [
    "node_modules",
    "tsDist",
    "dist",
    "test",
    "coverage"
  ],
  "include": [
    "src/**/*",
    "src/config/**/*",
    "views",
    "public"
  ]
}
